{
  "manifest_version": 2,

  "name": "NoKey",
  "version": "0.1.4",

  "applications": {
    "gecko": {
      "id": "nokey@something.nokey.com"
    }
  },

  "description": "A distributed password manager without a master passwords",

  "icons": {
    "48": "icons/library.svg",
    "96": "icons/library.svg"
  },

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/library.svg",
    "default_title": "NoKey",
    "default_popup": "popup/main.html"
  },

  "web_accessible_resources": [
      "icons/library.svg",
      "content_scripts/newPassword.html",
      "content_scripts/fillForm.html"
  ],

  "background": {
    "scripts": ["commons/bundle.js", "background/bundle.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/bundle.js"],
      "run_at": "document_end"
    }
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
